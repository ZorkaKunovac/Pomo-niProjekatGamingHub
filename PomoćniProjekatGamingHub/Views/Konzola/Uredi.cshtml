@model PomoćniProjekatGamingHub.Models.Konzola.KonzolaUrediVM


<h1>UrediKonzolu</h1>

<h4>Konzola</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Snimi" asp-controller="Konzola">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" readonly style="display:none">
                <label>KonzolaID</label>
                <input name="KonzolaID" value="@Model.KonzolaID" class="form-control" />
                <span asp-validation-for="KonzolaID" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" value="@Model.Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kapacitet" class="control-label"></label>
                <input asp-for="Kapacitet" value="@Model.Kapacitet" class="form-control" />
                <span asp-validation-for="Kapacitet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalji" class="control-label"></label>
                <input asp-for="Detalji" value="@Model.Detalji" class="form-control" />
                <span asp-validation-for="Detalji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Prikaz">Nazad na listu</a>
</div>
