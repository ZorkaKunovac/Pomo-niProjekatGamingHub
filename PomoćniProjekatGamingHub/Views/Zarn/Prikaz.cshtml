@using PomoćniProjekatGamingHub.Models.Zarn

@model List<ZarnPrikazVM>

<h1>Zarnovi</h1>
<a href="/Zarn/Uredi" class="btn btn-success">Dodaj</a>
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ZarnPrikazVM z in Model)
        {
            <tr>
                <td>@z.Naziv</td>
                <td>@z.Opis</td>
                <td>
                    <a href="/Zarn/Uredi?ZarnID=@z.Id" class="btn btn-primary">Uredi</a>
                    <a href="/Zarn/Obrisi?ZarnID=@z.Id" class="btn btn-danger">Obrisi</a>
                </td>
            </tr>
        }

    </tbody>
</table>